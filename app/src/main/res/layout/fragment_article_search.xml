<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Controllers.OtherActivities.ArticleSearchFragment"
    android:theme="@style/secondActivityColor">

    <!-- TODO: Update blank fragment layout -->
    <EditText
        style="@style/Widget.AppCompat.AutoCompleteTextView"
        android:id="@+id/article_search_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Search query term"
        android:backgroundTint="@color/colorPrimary"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="15dp"
        android:text=""/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/article_search_begin_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Begin Date"/>

            <EditText
                android:id="@+id/article_search_begin_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="false"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_arts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Arts"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_business"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Business"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_technology"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Technology"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/article_search_end_date_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="End Date"/>

            <EditText
                android:id="@+id/article_search_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:inputType="datetime"
                android:focusable="false"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_politics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Politics"
                android:layout_marginTop="15dp"
                android:paddingLeft="5dp"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_sports"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sports"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"/>

            <CheckBox
                android:id="@+id/article_search_chekBox_travel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Travel"
                android:layout_marginTop="5dp"
                android:paddingLeft="5dp"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/article_search_button_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@color/colorAccent"
        android:text="SEARCH"/>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/article_search_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="30dp"
        android:background="@android:color/darker_gray"/>

    <LinearLayout
        android:id="@+id/article_search_layout_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="7"
            android:text="Enable notifications (once per day)"/>

        <Switch
            android:id="@+id/article_search_notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:theme="@style/secondActivityColor"
            android:enabled="false"/>

    </LinearLayout>

</LinearLayout>