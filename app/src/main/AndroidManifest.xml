<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.francoislf.mynews">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".Controllers.Utils.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Controllers.OtherActivities.ArticleSearchActivity"
            android:parentActivityName=".Controllers.MainActivity" />
        <activity
            android:name=".Controllers.OtherActivities.NotificationsActivity"
            android:parentActivityName=".Controllers.MainActivity" />
        <activity
            android:name=".Controllers.OtherActivities.SearchResultActivity"
            android:parentActivityName=".Controllers.MainActivity" />
        <activity android:name=".Controllers.OtherActivities.WebViewActivity"/>

        <receiver android:name=".Controllers.Utils.MyAlarmReceiver"
            android:exported="true"/>
    </application>

</manifest>